pipeline {
    agent any
    environment {
        JAVA_HOME = tool name: 'JAVA_HOME', type: 'jdk' // Assurez-vous que 'JAVA_HOME' est configuré dans Jenkins
        M2_HOME = tool name: 'M2_HOME', type: 'maven'   // Assurez-vous que 'M2_HOME' est configuré dans Jenkins
        PATH = "${JAVA_HOME}/bin:${M2_HOME}/bin:${env.PATH}" // Ajout correct au PATH
    }
    stages {
        stage('Checkout') {
            steps {
                // Cloner le dépôt GitHub
                git branch: 'main', url: 'https://github.com/MalekSwissiEsprit/ProjetDevopsKaddemIndiv.git'
            }
        }
        stage('Compile Stage') {
            steps {
                sh 'mvn clean compile' // Nettoie et compile le projet
            }
        }
        stage('Test Stage') {
            steps {
                sh 'mvn test' // Exécute les tests unitaires
            }
        }
        stage('Maven Install') {
            steps {
                sh 'mvn install' // Installe le projet dans le dépôt local Maven
            }
        }
    }
    post {
        success {
            echo 'Pipeline terminé avec succès !'
        }
        failure {
            echo 'Le pipeline a échoué. Vérifiez les logs.'
        }
    }
}
