pipeline {
    agent any
    tools {
        maven 'M2_HOME' // Assurez-vous que Maven est configuré dans "Global Tool Configuration"
    }
    stages {
        stage('Checkout') {
            steps {
                // Cloner le dépôt GitHub
                git branch: 'main', url: 'https://github.com/MalekSwissiEsprit/ProjetDevopsKaddemIndiv.git'
            }
        }
        stage('Build & Test') {
            steps {
                // Changer de répertoire vers le dossier du projet (kaddem)
                dir('kaddem') {
                    // Exécuter les tests unitaires avec Maven
                    sh 'mvn clean test'
                }
            }
            post {
                always {
                    // Publier les résultats des tests JUnit
                    junit 'kaddem/target/surefire-reports/*.xml'
                }
            }
        }
        stage('Package') {
            steps {
                // Changer de répertoire vers le dossier du projet (kaddem)
                dir('kaddem') {
                    // Construire le JAR sans relancer les tests
                    sh 'mvn package -DskipTests'
                }
            }
        }
    }
    post {
        always {
            // Archiver le JAR généré
            archiveArtifacts artifacts: 'kaddem/target/*.jar', allowEmptyArchive: true
        }
        success {
            echo 'Build et tests réussis !'
        }
        failure {
            echo 'Échec du build ou des tests.'
        }
    }
}
